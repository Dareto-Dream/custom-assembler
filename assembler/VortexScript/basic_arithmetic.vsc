// basic_arithmetic.vsc
package example;

public class Main {
    public static byte main() {
        // Declare two byte variables
        byte x = 15;
        byte y = 4;

        // Basic arithmetic operations
        byte sum  = (byte)(x + y);  // 15 + 4  = 19
        byte diff = (byte)(x - y);  // 15 - 4  = 11
        byte prod = (byte)(x * y);  // 15 * 4  = 60
        byte quot = (byte)(x / y);  // 15 / 4  = 3  (floored)
        byte rem  = (byte)(x % y);  // 15 % 4  = 3
    }
}
